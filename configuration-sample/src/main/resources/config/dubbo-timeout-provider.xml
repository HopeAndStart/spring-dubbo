<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!--定义服务-->
    <dubbo:application name="configuration-sample" logger="log4j2"/>

    <!--定义注册中心启动检查是否存在-->
    <dubbo:registry id="zookeeperRegistry" protocol="zookeeper" address="localhost:2181"
                    check="true"/>

    <!--定义发布协议-->
    <dubbo:protocol id="dubboProtocol" name="dubbo" port="20880"/>

    <!--定义服务发布-->
    <dubbo:service interface="com.zsl.service.sample.SampleDubboService" ref="SampleDubboServiceImpl"
                   protocol="dubboProtocol" registry="zookeeperRegistry" />

</beans>