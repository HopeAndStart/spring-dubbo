<?xml version="1.0" encoding="UTF-8" ?>
<Configuration  status="warn" strict="true" name="XMLConfigTest"
packages="com.zsl">
    <Filter type="ThresholdFilter" level="trace"/>
    <Appenders>
        <Appender type="Console" name="STDOUT">
            <Layout type="PatternLayout" pattern="[%p] [%d{yyyy-MM-dd HH:mm:ss.SSS}] [%class{36}] %L %M - %msg%xEx%n"/>
        </Appender>
    </Appenders>
    <Loggers>
        <Logger name="com.zsl" level="debug" additivity="false">
            <AppenderRef ref="STDOUT"></AppenderRef>
        </Logger>

        <Logger name="org.springframework" level="info" additivity="false">
            <AppenderRef ref="STDOUT"></AppenderRef>
        </Logger>

        <Logger name="org.apache.dubbo" level="info" additivity="false">
            <AppenderRef ref="STDOUT"></AppenderRef>
        </Logger>

        <Logger name="org.mybatis" level="info" additivity="false">
            <AppenderRef ref="STDOUT"></AppenderRef>
        </Logger>

        <Root>
            <AppenderRef ref="STDOUT"></AppenderRef>
        </Root>
    </Loggers>
</Configuration>