<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!--XML生产者应用信息-->
    <dubbo:application name="xml-provider"/>

    <!--Dubbo协议发布配置-->
    <dubbo:protocol id="dubbo" name="dubbo" port="20880"/>

    <!--Zookeeper注册中心配置-->
    <dubbo:registry id="zookeeper" protocol="zookeeper" address="localhost:2181"/>
    
    <!--发布服务-->
    <dubbo:service interface="com.zsl.service.DubboTestService" ref="DubboTestServiceImpl">
        <property name="protocol" ref="dubbo"/>
        <property name="registry" ref="zookeeper"/>
    </dubbo:service>


</beans>