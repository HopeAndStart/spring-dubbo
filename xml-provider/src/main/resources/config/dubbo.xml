<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!--XML生产者应用信息-->
    <dubbo:application name="xml-provider" logger="log4j2"/>


    <!--Dubbo协议发布配置-->
    <dubbo:protocol id="dubboProtocol" name="dubbo" port="20880" />

    <!--Rest协议发布配置-->
    <dubbo:protocol id="restProtocol"  name="rest"  port="20882" server="tomcat"/>

    <!--Zookeeper注册中心配置-->
    <dubbo:registry id="zookeeper" protocol="zookeeper" address="localhost:2181"/>
    
    <!--发布Dubbo服务-->
    <dubbo:service interface="com.zsl.service.xml.DubboTestService" ref="DubboTestServiceImpl"
                   protocol="dubboProtocol" registry="zookeeper" timeout="10000" retries="0" />

    <!--发布Rest服务-->
    <dubbo:service interface="com.zsl.service.xml.RestTestService" ref="RestTestServiceImpl"
                   protocol="restProtocol" registry="zookeeper"/>


</beans>